#include <iostream>
using namespace std;

#define SIZE 5

int a[SIZE];
int top = -1;

void push(int data) {
	if (top >= SIZE - 1) {
		cout << "overflow" << endl;
	}
	else {
		top++;
		a[top] = data;
	}
}

int pop() {
	int data;
	if (top == -1) {
		cout << "underflow" << endl;
		return -1; // Return something to indicate underflow
	}
	else {
		data = a[top];
		top--;
		return data;
	}
}

void display() {
	if (top == -1) {
		cout << "Stack is empty" << endl;
	}
	else {
		for (int i = 0; i <= top; i++) {
			cout << a[i] << " ";
		}
		cout << endl;
	}
}

int main()
{
	int ch, data,  count=1;

	while (true) {
		cout << "1. push  2. pop  3. display current condition 4. current count" << endl;
		cin >> ch;

		switch (ch) {
		case 1:
			cout << "enter data" << endl;
			cin >> data;
			push(data);
			break;

		case 2: {
			if(top+1 ==SIZE) {
				cout<<"overflow"<<endl;
			}
			else {
				top++;
				a[top] =data;
			}
			break;
		}

		case 3:
			display();
			break;

		case 4:

			for (int j = 0; j < top; j++) {
				count++;
			}
			cout << count;
			return 0;
		}
	}

	return 0;
}
