//1+2+3+....+n
//f(1) = 1 , f(2) = 1+2 , f(3) = 1+2 + 3 or f(3) = f(2)+ 3 - general form is - f(n) = f(n-2) +n
  
#include <iostream>
using namespace std;

int Sum (int n){
    if (n<=0) return 0; //must put this condition at the beginning
    if(n==1) return 1;
    return Sum(n-1) +n ;
    
}
int main()
{
    int n;
    cout<<"enter the number: "<<endl;
    cin>>n;
    
    int s = Sum(n);
    cout <<"the sum of "<<n<<"numbers is- "<<s<<endl;

    return 0;
}
